<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/view_flipper1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/instroduce"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="please touch 3 times to setup lockscreen" />
        </LinearLayout>

        <View
            android:id="@+id/background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/activityRoot"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#59000000" >

            <Button
                android:id="@+id/b5"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignBaseline="@+id/b4"
                android:layout_alignBottom="@+id/b4"
                android:layout_alignRight="@+id/b2"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignBaseline="@+id/b5"
                android:layout_alignBottom="@+id/b5"
                android:layout_alignRight="@+id/b3"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/b1"
                android:layout_below="@+id/b1"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignBaseline="@+id/b7"
                android:layout_alignBottom="@+id/b7"
                android:layout_alignLeft="@+id/b5"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/b8"
                android:layout_below="@+id/b8"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/b7"
                android:layout_alignTop="@+id/b0"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_above="@+id/b0"
                android:layout_alignLeft="@+id/b6"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/back"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/b9"
                android:layout_alignTop="@+id/b0"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="X"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/b2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignBaseline="@+id/b1"
                android:layout_alignBottom="@+id/b1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b7"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/b4"
                android:layout_below="@+id/b4"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="Enter Pincode"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignBaseline="@+id/b2"
                android:layout_alignBottom="@+id/b2"
                android:layout_alignRight="@+id/pin"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignLeft="@+id/pin"
                android:layout_below="@+id/pin"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>
    </ViewFlipper>

</RelativeLayout>